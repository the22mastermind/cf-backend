{
    "env": {
        "es6": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 11,
        "sourceType": "module"
    },
    "rules": {
        "no-extra-semi": "off",
        "no-shadow": [
            "error",
            {
                "allow": [
                    "user"
                ]
            }
        ],
        "no-unused-vars": [
            "error",
            {
                "argsIgnorePattern": "Sequelize"
            }
        ],
        "no-undef": "off",
        "arrow-parens": "off",
        "function-paren-newline": "off",
        "no-nested-ternary": "off"
    },
    "parser": "babel-eslint"
}
